# Production-optimized npm configuration
# Reduces install time and disk usage on VPS
# Note: production=true is commented out to allow devDependencies for Vercel builds
# For VPS builds, use: npm ci --omit=dev

# production=true
loglevel=warn
package-lock=true
audit=false
fund=false
cache=.npm
prefer-dedupe=true
legacy-peer-deps=false
strict-peer-deps=false
